mixin delete_comment(formIdentifier,address,sendMethod,idName,idValue,submitButtonLabel,i18nextLng)
    div
        form(action=address method=sendMethod id=formIdentifier class="delete-comment-form")
            input(type="hidden" value=idValue name=idName)
            div
                input(type="submit" class="delete-comment-form-submit" value=submitButtonLabel form=formIdentifier  onclick="return confirm('"+t('delete_form.verification.comment', {lng: i18nextLng})+"')")